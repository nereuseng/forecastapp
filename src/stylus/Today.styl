weather-bg-mask-settings()
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

    text-align: center
    height: 92.2vh

.weather-bg-mask
    background-color: rgba(0, 0, 0, 0.5)
    transition: all 0.6s
    weather-bg-mask-settings()


.weather-bg-mask-masking
    background-color: black
    transition: all 0.3s
    left: 0
    width: 100%
    weather-bg-mask-settings()